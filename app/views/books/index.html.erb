<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Isbn</th>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th>Checked out to</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= book.isbn %></td>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.author %></td>
        <% if book.email == nil %>
            <td>Not Applicable</td>
            <% else %>
        <td><%= book.email %></td>
            <%end%>
        <% if book.status == true %>
            <td>Available</td>
        <% else %>
            <td>Checked Out</td>
        <% end %>
        <!td><!%= link_to "Checkout", controller: "books", action: "checkout", id: @book %><!/td>        
        <!td><!%= button_to 'Checkout', checkout_path %><!/td>
        <!%= link_to 'Checkout', new_book_path, new_book_path(:book = {:isbn = @book.isbn})%>
        <!td><!%= form_tag("/checkout", method: "get") do %> <!%= label(:book, :isbn) %> <!%= submit_tag("Check Out") %><!/td> <!% end %>
        <td><%= link_to 'Show', book %></td>
        <td><% if isadmin %><%= link_to 'Edit', edit_book_path(book) %><% end %></td>
        <td><% if isadmin %><%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
        <td><% if isadmin %><%= link_to 'History Out History', checkout_history_book_path(book.isbn) %><% end %></td>

      </tr>
    <% end %>
  </tbody>
</table>

