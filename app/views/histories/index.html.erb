<h1>Listing Book History</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Comment</th>
    <th colspan="2"></th>
  </tr>

  <% @history.each do |history| %>
      <tr>
        <td><%= history.id %></td>
        <td><%= history.comment %></td>
        <td><%= link_to 'Show', history_path(history) %></td>
        <td><%= link_to 'Edit', edit_history_path(history) %></td>
        <td><%= link_to 'Delete', history_path(history),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>

<%= link_to 'New History', new_history_path %>